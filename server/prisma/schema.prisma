generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  adminId   String   @unique
  password  String
  createdAt DateTime @default(now())
}

model equipments {
  serialNumber        String          @id @default(auto()) @map("_id") @db.ObjectId
  name                String          @unique
  description         String
  initialAverageUsage Int
  gymEquipments       gymEquipments[]
}

model gymEquipments {
  id                     String     @id @default(auto()) @map("_id") @db.ObjectId
  equipment              equipments @relation(fields: [equipmentsSerialNumber], references: [serialNumber])
  averageUsageTime       Int
  location               String
  recentUsage            Int?
  installedAt            DateTime   @default(now())
  equipmentsSerialNumber String     @db.ObjectId
}
